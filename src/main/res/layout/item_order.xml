<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:background="#9e8eb6">

    <TextView
        android:id="@+id/ord_item_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Navigation"
        android:textColor="#9b92b3"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="11">

        <TextView
            android:id="@+id/ord_item_totalPrice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:text="Bar"
            android:layout_marginBottom="10dp"
            android:textColor="#9b92b3"
            android:textStyle="bold"
            android:layout_weight="6"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/ord_imgbtn_item_plus"
            android:background="@drawable/ic_plus"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/ord_item_amt"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:textColor="#9b92b3"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:text="Amt"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/ord_imgbtn_item_minus"
            android:background="@drawable/ic_minus"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
