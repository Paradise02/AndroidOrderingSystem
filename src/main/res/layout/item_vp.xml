<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:weightSum="5">

    <ImageView
        android:id="@+id/img_item_url"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/bg_round_rect"
        android:src="@drawable/default_image"/>

    <TextView
        android:id="@+id/txt_vp_item_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Navigation"
        android:textColor="#9b92b3"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="11">

        <TextView
            android:id="@+id/txt_vp_item_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:text="Bar"
            android:layout_marginBottom="10dp"
            android:textColor="#9b92b3"
            android:textStyle="bold"
            android:layout_weight="6"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/imgbtn_item_plus"
            android:background="@drawable/ic_plus"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txt_vp_item_num"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:background="@drawable/bg_round_rect"
            android:gravity="center"
            android:textColor="#9b92b3"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_weight="3"
            android:text="Amt"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/imgbtn_item_minus"
            android:background="@drawable/ic_minus"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_vp_item_descip"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Tab"
        android:textColor="#9b92b3"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txt_vp_item_page"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/bg_round_rect"
        android:gravity="center"
        android:text="Page"
        android:textColor="#9b92b3"
        android:textStyle="bold"/>

</LinearLayout>